<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RelativeAct">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txt_relative"
        android:text="Iini adalah layout relative"
        android:textSize="30sp"
        android:gravity="center_horizontal"/>
    <TextView
        android:id="@+id/txt_bariskedua"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ini vbaris kedua"
        android:textSize="30sp"
        android:layout_below="@+id/txt_relative"/>
    <TextView
        android:id="@+id/txt_barisketiga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ini baris ke tiga"
        android:textSize="20sp"
        android:layout_below="@+id/txt_relative"
        android:layout_toRightOf="@+id/txt_bariskedua"
        android:layout_marginLeft="20dp"
        />
</RelativeLayout>